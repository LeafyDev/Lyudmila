            </Border>
            <Border Grid.Row="6"
                    Grid.Column="2"
                    Width="390"
                    Margin="10"
                    BorderBrush="{Binding ActiveColorBrush}"
                    BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20"
                                      Opacity="1"
                                      ShadowDepth="0"
                                      Color="{Binding ActiveColor}" />
                </Border.Effect>
                <Button Height="182"
                        Click="TF2_Click"
                        Padding="0">
                    <Image Source="pack://application:,,,/Resources/img/TF2.jpg" Stretch="Fill" />
                </Button>
            </Border>

            <Border Grid.Row="7"
                    Grid.Column="0"
                    Width="390"
                    Margin="10"
                    BorderBrush="{Binding ActiveColorBrush}"
                    BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20"
                                      Opacity="1"
                                      ShadowDepth="0"
                                      Color="{Binding ActiveColor}" />
                </Border.Effect>
                <Button Height="182"
                        Click="UT3_Click"
                        Padding="0">
                    <Image Source="pack://application:,,,/Resources/img/UT3.jpg" Stretch="Fill" />
                </Button>
            </Border>
            <Border Grid.Row="7"
                    Grid.Column="1"
                    Width="390"
                    Margin="10"
                    BorderBrush="{Binding ActiveColorBrush}"
                    BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20"
                                      Opacity="1"
                                      ShadowDepth="0"
                                      Color="{Binding ActiveColor}" />
                </Border.Effect>
                <Button Height="182"
                        Click="BtnClick_More"
                        Padding="0">
                    <Image Source="pack://application:,,,/Resources/img/more.png" Stretch="Fill" />
                </Button>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
