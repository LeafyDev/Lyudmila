<UserControl x:Class="Lyudmila.Client.Views.Games"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:input="clr-namespace:Lada.Windows.Input;assembly=WpfMouseWheelLib"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/Themes/ScrollBar.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer input:MouseWheel.Enhanced="True"
                  input:MouseWheel.ScrollMode="Auto"
                  input:MouseWheel.Smoothing="Smooth"
                  input:MouseWheel.VScrollSmoothing="Smooth">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="16" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Row="1"
                    Grid.Column="0"
                    Width="390"
                    Margin="10"
                    BorderBrush="{Binding ActiveColorBrush}"
                    BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20"
                                      Opacity="1"
                                      ShadowDepth="0"
                                      Color="{Binding ActiveColor}" />
                </Border.Effect>
                <Button Height="182"
                        Click="AoE2HD_Click"
                        Padding="0">
                    <Image Source="pack://application:,,,/Resources/img/AoE2HD.jpg" Stretch="Fill" />
                </Button>
            </Border>
            <Border Grid.Row="1"
                    Grid.Column="1"
                    Width="390"
                    Margin="10"
                    BorderBrush="{Binding ActiveColorBrush}"
                    BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20"
                                      Opacity="1"
                                      ShadowDepth="0"
                                      Color="{Binding ActiveColor}" />
                </Border.Effect>
                <Button Height="182"
                        Click="BF3_Click"
                        Padding="0">
                    <Image Source="pack://application:,,,/Resources/img/BF3.jpg" Stretch="Fill" />
                </Button>
            </Border>
            <Border Grid.Row="1"
                    Grid.Column="2"
                    Width="390"
                    Margin="10"
                    BorderBrush="{Binding ActiveColorBrush}"
                    BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20"
                                      Opacity="1"
                                      ShadowDepth="0"
                                      Color="{Binding ActiveColor}" />
                </Border.Effect>
                <Button Height="182"
                        Click="Blur_Click"
                        Padding="0">
                    <Image Source="pack://application:,,,/Resources/img/Blur.jpg" Stretch="Fill" />
                </Button>
            </Border>

            <Border Grid.Row="2"
                    Grid.Column="0"
                    Width="390"
                    Margin="10"
                    BorderBrush="{Binding ActiveColorBrush}"
                    BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20"
                                      Opacity="1"
                                      ShadowDepth="0"
                                      Color="{Binding ActiveColor}" />
                </Border.Effect>
                <Button Height="182"
                        Click="CoD2_Click"
                        Padding="0">
                    <Image Source="pack://application:,,,/Resources/img/CoD2.jpg" Stretch="Fill" />
                </Button>
            </Border>
            <Border Grid.Row="2"
                    Grid.Column="1"
                    Width="390"
                    Margin="10"
                    BorderBrush="{Binding ActiveColorBrush}"
                    BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20"
                                      Opacity="1"
                                      ShadowDepth="0"
                                      Color="{Binding ActiveColor}" />
                </Border.Effect>
                <Button Height="182"
                        Click="CoD4_Click"
