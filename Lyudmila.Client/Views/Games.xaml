                    <Image Source="pack://application:,,,/Resources/img/CoD4.jpg" Stretch="Fill" />
                </Button>
            </Border>
            <Border Grid.Row="2"
                    Grid.Column="2"
                    Width="390"
                    Margin="10"
                    BorderBrush="{Binding ActiveColorBrush}"
                    BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20"
                                      Opacity="1"
